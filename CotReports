<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>COT Reports</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid black;
            padding: 10px;
            text-align: center;
        }
        .header-row {
            background-color: rgb(0, 60, 0);
            color: white;
        }
    </style>
</head>
<body>

    <h1>COT reports data (EUR FX)</h1>
    <table id="CotTable">
        <thead>
            <tr class="header-row">
                <th>Report Date</th>
                <th>Open Interest</th>
                <th>NonComm Long</th>
                <th>NonComm Short</th>
                <th>Comm Long</th>
                <th>Comm Short</th>
                <th>NonRept Long</th>
                <th>NonRept Short</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <script>
        async function loadCotData() {
            const response = await fetch('/api/eurfx');
            const data = await response.json();
            const tbody = document.querySelector('#CotTable tbody');

            data.forEach(row => {
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td>${row["Report_Date_as_YYYY-MM-DD"]}</td>
                    <td>${row["Open_Interest_All"]}</td>
                    <td>${row["M_Money_Positions_Long_All"]}</td>
                    <td>${row["M_Money_Positions_Short_All"]}</td>
                    <td>${row["Prod_Merc_Positions_Long_All"]}</td>
                    <td>${row["Prod_Merc_Positions_Short_All"]}</td>
                    <td>${row["NonRept_Positions_Long_All"]}</td>
                    <td>${row["NonRept_Positions_Short_All"]}</td>
                `;
                tbody.appendChild(tr);
            });
        }

        loadCotData();
    </script>
</body>
</html>